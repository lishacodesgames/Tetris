{
   "version": 3,
   "configurePresets": [
      {
         "name": "base",
         "hidden": true,
         "generator": "Ninja",
         "binaryDir": "${sourceDir}/build/${presetName}",
         "cacheVariables": {
            "CMAKE_C_STANDARD": "99",
            "CMAKE_CXX_STANDARD": "23",
            "CMAKE_CXX_STANDARD_REQUIRED": "ON",
            "CMAKE_CXX_EXTENSIONS": "OFF"
         }
      },
      {
         "name": "Debug",
         "inherits": "base",
         "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
         }
      },
      {
         "name": "Release",
         "inherits": "base",
         "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
         }
      }
   ],
   "buildPresets": [
      {
         "name": "Debug",
         "configurePreset": "Debug"
      },
      {
         "name": "Release",
         "configurePreset": "Release"
      }
   ]
}